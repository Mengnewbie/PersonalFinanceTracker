<UserControl x:Class="PersonalFinanceTracker.Views.BudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:PersonalFinanceTracker.ViewModels"
             Background="White">

    <UserControl.DataContext>
        <viewmodels:BudgetViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Budget Tracking" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">
            <Button Content="➕ Add Budget" 
                    Command="{Binding AddBudgetCommand}"
                    Background="#27AE60" 
                    Foreground="White"
                    Padding="15,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="✏️ Edit" 
                    Command="{Binding EditBudgetCommand}"
                    Background="#3498DB" 
                    Foreground="White"
                    Padding="15,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E86C1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="🗑️ Delete" 
                    Command="{Binding DeleteBudgetCommand}"
                    Background="#E74C3C" 
                    Foreground="White"
                    Padding="15,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E74C3C"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Budget List -->
   
        <ListBox Grid.Row="2"
         ItemsSource="{Binding BudgetItems}"
         SelectedItem="{Binding SelectedBudgetItem}"
         Background="Transparent"
         BorderThickness="0"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                                    <ContentPresenter />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,15">

                        <!-- Selection styling -->
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" 
                                         Value="True">
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                        <Setter Property="Background" Value="#EBF5FB"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Category Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}" 
                                       FontSize="24"
                                       Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Category}" 
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"
                                       VerticalAlignment="Center"/>

                                    <!-- SELECTED Badge -->
                                    <Border Margin="10,0,0,0"
                                    Background="#3498DB"
                                    CornerRadius="10"
                                    Padding="8,3"
                                    VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" 
                                                         Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="SELECTED"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                                    <Border Background="{Binding StatusColor}"
                                    CornerRadius="12"
                                    Padding="10,5">
                                        <TextBlock Text="{Binding StatusText}"
                                           Foreground="White"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Progress Bar -->
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <ProgressBar Height="25"
                                     Value="{Binding ProgressPercentage}"
                                     Maximum="100"
                                     Background="#ECF0F1"
                                     Foreground="{Binding StatusColor}"
                                     BorderThickness="0"/>
                                <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   FontSize="12"/>
                            </Grid>

                            <!-- Budget Details -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Budget" 
                                               FontSize="11"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <TextBlock Text="{Binding BudgetAmountFormatted}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Spent" 
                                               FontSize="11"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <TextBlock Text="{Binding SpentFormatted}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#E74C3C"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Remaining" 
                                               FontSize="11"
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,3"/>
                                    <TextBlock Text="{Binding RemainingFormatted}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#27AE60"/>
                                </StackPanel>
                            </Grid>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>