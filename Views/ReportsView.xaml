<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:viewmodels="clr-namespace:PersonalFinanceTracker.ViewModels"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="PersonalFinanceTracker.Views.ReportsView"
             Background="White" av:DesignWidth="1111.588">

    <UserControl.DataContext>
        <viewmodels:ReportsViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Reports &amp; Analytics" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Charts Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Expense Breakdown Pie Chart -->
            <Border Grid.Row="0" Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,10,10"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Expense Breakdown by Category" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <lvc:PieChart Grid.Row="1"
                                  Series="{Binding ExpensePieSeries}"
                                  LegendPosition="Right"
                                  LegendTextSize="12"
                                  InitialRotation="-90"/>
                </Grid>
            </Border>

            <!-- Income vs Expenses Bar Chart -->
            <Border Grid.Row="0" Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="10,0,0,10"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Income vs Expenses" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>

                    <lvc:CartesianChart Grid.Row="1"
                                        Series="{Binding IncomeExpenseBarSeries}"
                                        XAxes="{Binding IncomeExpenseXAxes}"
                                        LegendPosition="Top"
                                        LegendTextSize="12"/>
                </Grid>
            </Border>

            <!-- Summary Card -->
            <Border Grid.Row="1" Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,10,10,0"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Summary" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <Border Background="#ECF0F1" 
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <TextBlock Text="Total Transactions" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="View all transactions to see detailed breakdown" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Background="#ECF0F1" 
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <TextBlock Text="Most Used Category" 
                                           FontSize="14" 
                                           Foreground="#7F8C8D"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Add transactions to see insights" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="💡 Tip: Add more transactions to see detailed analytics" 
                                   FontSize="12"
                                   Foreground="#95A5A6"
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quick Stats -->
            <Border Grid.Row="1" Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="10,10,0,0"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Quick Stats" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <Border Background="#E8F8F5" 
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Average Transaction" 
                                           FontSize="12" 
                                           Foreground="#16A085"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Coming Soon" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="#16A085"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FEF5E7" 
                                CornerRadius="5"
                                Padding="15"
                                Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Largest Expense" 
                                           FontSize="12" 
                                           Foreground="#D68910"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Coming Soon" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="#D68910"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FADBD8" 
                                CornerRadius="5"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Monthly Average" 
                                           FontSize="12" 
                                           Foreground="#C0392B"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Coming Soon" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="#C0392B"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>