<Window x:Class="PersonalFinanceTracker.Views.AddEditBudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Budget" 
        Height="545" 
        Width="457"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Add New Budget" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Category -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" 
                      FontSize="14"
                      Padding="8"
                      Height="35"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Budget Amount -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Budget Amount" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="BudgetAmountTextBox" 
             FontSize="14"
             Padding="8"
             Height="35"
             PreviewTextInput="BudgetAmountTextBox_PreviewTextInput"/>
        </StackPanel>

        <!-- Period -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Period" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="PeriodComboBox" 
                      FontSize="14"
                      Padding="8"
                      Height="35">
                <ComboBoxItem Content="Monthly" IsSelected="True"/>
                <ComboBoxItem Content="Weekly"/>
                <ComboBoxItem Content="Yearly"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Click="CancelButton_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#95A5A6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Save" 
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Click="SaveButton_Click"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>