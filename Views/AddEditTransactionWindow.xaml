<Window x:Class="PersonalFinanceTracker.Views.AddEditTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Transaction" 
        Height="591" 
        Width="539"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Add New Transaction" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Date -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <DatePicker x:Name="DatePicker" 
                        FontSize="14"
                        Padding="8"
                        Height="35"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" 
                     FontSize="14"
                     Padding="8"
                     Height="35"
                     TextChanged="Input_Changed"/>
        </StackPanel>

        <!-- Type -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="TypeComboBox" 
                      FontSize="14"
                      Padding="8"
                      Height="35"
                      SelectionChanged="TypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Income" IsSelected="True"/>
                <ComboBoxItem Content="Expense"/>
            </ComboBox>
        </StackPanel>

        <!-- Category -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox" 
                      FontSize="14"
                      Padding="8"
                      Height="35"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Amount and Currency in same row -->
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- Amount -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Amount" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="AmountTextBox" 
                         FontSize="14"
                         Padding="8"
                         Height="35"
                         PreviewTextInput="AmountTextBox_PreviewTextInput"
                         TextChanged="Input_Changed"/>
            </StackPanel>

            <!-- Currency -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Currency" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CurrencyComboBox" 
                          FontSize="14"
                          Padding="8"
                          Height="35"
                          DisplayMemberPath="Code"
                          SelectionChanged="CurrencyComboBox_SelectionChanged"/>
            </StackPanel>
        </Grid>

        <!-- Conversion Info -->
        <Border Grid.Row="6" 
                Background="#EBF5FB"
                BorderBrush="#3498DB"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="ConversionInfoText"
                           FontSize="12"
                           Foreground="#2C3E50"
                           TextWrapping="Wrap"
                           Text="Enter amount in selected currency"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Click="CancelButton_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#95A5A6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Save" 
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Click="SaveButton_Click"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>