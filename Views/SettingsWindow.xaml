<Window x:Class="PersonalFinanceTracker.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="471" 
        Width="583"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Application Settings" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Currency Section -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="💱 Currency" 
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Select your preferred currency for displaying amounts:" 
                           FontSize="12"
                           Foreground="#7F8C8D"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"/>

                <ComboBox x:Name="CurrencyComboBox"
                          DisplayMemberPath="DisplayName"
                          Height="40"
                          Padding="12,8"
                          FontSize="14"
                          BorderBrush="#BDC3C7"
                          SelectionChanged="CurrencyComboBox_SelectionChanged"/>
            </StackPanel>
        </Border>

        <!-- Info Section -->
        <Border Grid.Row="2"
                Background="#EBF5FB"
                BorderBrush="#3498DB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ℹ️" 
                           FontSize="20"
                           Margin="0,0,10,0"
                           VerticalAlignment="Top"/>
                <TextBlock FontSize="12"
                           Foreground="#2C3E50"
                           TextWrapping="Wrap">
                    <Run Text="Note:" FontWeight="Bold"/>
                    <Run Text="Changing currency will update how amounts are displayed throughout the app. This does not convert existing transaction amounts."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Preview -->
        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Preview" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#7F8C8D"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Example Amount:" 
                               FontSize="13"
                               Foreground="#7F8C8D"
                               Width="140"/>
                    <TextBlock x:Name="PreviewText"
                               Text="$1,234.56"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                    <TextBlock Text="For Riel (៛10,000):" 
                               FontSize="13"
                               Foreground="#7F8C8D"
                               Width="140"/>
                    <TextBlock x:Name="PreviewRiel"
                               Text="៛10,000"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    FontSize="14"
                    Click="CancelButton_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#95A5A6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Save &amp; Apply" 
                    Width="120"
                    Height="35"
                    FontSize="14"
                    Click="SaveButton_Click"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>