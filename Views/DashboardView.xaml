<UserControl x:Class="PersonalFinanceTracker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:PersonalFinanceTracker.ViewModels"
             Background="White">

    <UserControl.DataContext>
        <viewmodels:DashboardViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Dashboard" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cards Row -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="3" Margin="0,0,0,20">

                <!-- Total Income Card -->
                <!-- Total Income Card -->
                <Border Background="#27AE60" 
        CornerRadius="8" 
        Padding="20"
        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total Income" 
                   Foreground="White" 
                   FontSize="16"
                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalIncome, StringFormat=C}" 
                   Foreground="White" 
                   FontSize="32"
                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Total Expenses Card -->
                <Border Background="#E74C3C" 
        CornerRadius="8" 
        Padding="20"
        Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Total Expenses" 
                   Foreground="White" 
                   FontSize="16"
                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalExpenses, StringFormat=C}" 
                   Foreground="White" 
                   FontSize="32"
                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Balance Card -->
                <Border Background="#3498DB" 
        CornerRadius="8" 
        Padding="20"
        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Balance" 
                   Foreground="White" 
                   FontSize="16"
                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding Balance, StringFormat=C}" 
                   Foreground="White" 
                   FontSize="32"
                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recent Transactions Section -->
            <Border Grid.Row="1" 
                    Background="#ECF0F1" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Transactions" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                    <!-- Sample Transaction Items -->
                    <Border Background="White" 
                            Padding="15" 
                            CornerRadius="5"
                            Margin="0,0,0,10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Grocery Shopping" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="Food and Dining" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right">
                                <TextBlock Text="-$85.50" Foreground="#E74C3C" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Jan 15, 2024" Foreground="Gray" FontSize="11" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="White" 
                            Padding="15" 
                            CornerRadius="5"
                            Margin="0,0,0,10">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Salary" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="Income" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right">
                                <TextBlock Text="+$3,200.00" Foreground="#27AE60" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Jan 1, 2024" Foreground="Gray" FontSize="11" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="White" 
                            Padding="15" 
                            CornerRadius="5">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="Electric Bill" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="Utilities" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right">
                                <TextBlock Text="-$120.00" Foreground="#E74C3C" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Jan 10, 2024" Foreground="Gray" FontSize="11" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</UserControl>
