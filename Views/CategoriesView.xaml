<UserControl x:Class="PersonalFinanceTracker.Views.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:PersonalFinanceTracker.ViewModels"
             Background="White">

    <UserControl.DataContext>
        <viewmodels:CategoriesViewModel />
    </UserControl.DataContext>

    <!-- Rest stays the same until ListBox -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Categories" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">
            <Button Content="➕ Add Category" 
                    Command="{Binding AddCommand}"
                    Background="#27AE60" 
                    Foreground="White"
                    Padding="15,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="✏️ Edit" 
                    Command="{Binding EditCommand}"
                    Background="#3498DB" 
                    Foreground="White"
                    Padding="15,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2E86C1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="🗑️ Delete" 
                    Command="{Binding DeleteCommand}"
                    Background="#E74C3C" 
                    Foreground="White"
                    Padding="15,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E74C3C"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Categories List -->
        <ListBox Grid.Row="2" 
                 ItemsSource="{Binding Categories}"
                 SelectedItem="{Binding SelectedCategory}"
                 BorderThickness="1"
                 BorderBrush="#BDC3C7">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15" 
                            Background="White"
                            Margin="0,0,0,1">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="40" 
                                        Height="40" 
                                        CornerRadius="20"
                                        Background="{Binding Color}"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               FontSize="16"/>
                                    <TextBlock Text="{Binding Type}" 
                                               Foreground="Gray" 
                                               FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>